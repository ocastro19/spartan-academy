# Configurações do Servidor
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Banco de Dados
MONGODB_URI=mongodb://localhost:27017/spartan-jiujitsu

# Configurações de Autenticação
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=seu_jwt_refresh_secret_super_seguro_aqui
JWT_REFRESH_EXPIRE=30d

# Mercado Pago
MP_ACCESS_TOKEN=seu_access_token_do_mercado_pago
MP_PUBLIC_KEY=sua_public_key_do_mercado_pago
MP_WEBHOOK_SECRET=seu_webhook_secret

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app
EMAIL_FROM=noreply@spartanjiujitsu.com
EMAIL_FROM_NAME=Spartan Jiu-Jitsu

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads
AVATAR_PATH=uploads/avatars
PRODUCT_PATH=uploads/products
CERTIFICATE_PATH=certificates

# Configurações da Academia
ACADEMY_NAME=Spartan Jiu-Jitsu
ACADEMY_PHONE=+55 11 99999-9999
ACADEMY_EMAIL=contato@spartanjiujitsu.com
ACADEMY_ADDRESS=Rua das Artes Marciais, 123

# Configurações de Multa e Juros
DEFAULT_LATE_FEE_TYPE=percentage
DEFAULT_LATE_FEE_VALUE=10
DEFAULT_DAILY_INTEREST=0.033
DEFAULT_BLOCK_DAYS=7

# Configurações de Check-in
DEFAULT_CHECKIN_WINDOW=60
MAX_CLASS_CAPACITY=30

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configurações de Backup
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30

# Configurações de Log
LOG_LEVEL=info
LOG_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Configurações de Timezone
TIMEZONE=America/Sao_Paulo

# Configurações de Segurança
ENCRYPTION_KEY=sua_chave_de_criptografia_32_caracteres
HASH_ROUNDS=12

# Configurações de Cache
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Configurações de Notificações
NOTIFICATION_ENABLED=true
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=seu_twilio_account_sid
SMS_AUTH_TOKEN=seu_twilio_auth_token
SMS_FROM_NUMBER=+5511999999999

# Configurações de Relatórios
REPORT_LOGO_PATH=assets/logo.png
REPORT_COMPANY_NAME=Spartan Jiu-Jitsu
REPORT_COMPANY_ADDRESS=Rua das Artes Marciais, 123 - São Paulo, SP
REPORT_COMPANY_PHONE=(11) 99999-9999
REPORT_COMPANY_EMAIL=contato@spartanjiujitsu.com

# Configurações de Desenvolvimento
DEBUG=spartan:*
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true

# Configurações de Produção
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
COMPRESSION_ENABLED=true
MORGAN_FORMAT=combined

# Configurações de Monitoramento
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_PORT=9090

# Configurações de Integração
WEBHOOK_URL=https://seu-dominio.com/api/webhooks
API_VERSION=v1
API_DOCS_ENABLED=true